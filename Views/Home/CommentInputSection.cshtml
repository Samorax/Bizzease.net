@model WebApplication_Webease_.Models.Comment
<div class="row">
    <div class="col-sm-4">
    <div class="form-group">
        <div><label asp-for="CommenterName"></label></div>
        <div><input asp-for="CommenterName" class="form-control"/></div>
        <span asp-validation-for="CommenterName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div><label asp-for="CommenterEmailAddress"></label></div>
        <div><input asp-for="CommenterEmailAddress" class="form-control"/></div>
        <span asp-validation-for="CommenterEmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div><label asp-for="CommentBody"></label></div>
        <textarea asp-for="CommentBody" rows="10" cols="40" spellcheck="true" class="form-control"></textarea>
        <span asp-validation-for="CommentBody" class="text-danger"></span>
    </div>

